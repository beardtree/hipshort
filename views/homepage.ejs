<div id="homepage" class="text-center">
  <div class="jumbotron">
    <div class="container">
      <h1>Hipshort <small>hipster URL shortener</small></h1>
    </div>
  </div>
  <div class="container">
    <form v-on="submit: shorten() | preventDefault" class="form-horizontal" role="form">
      <div class="form-group row" v-class="has-error: !isValidURL">
        <div class="col-sm-12">
          <label for="long-url" class="control-label sr-only">Long URL</label>
          <div id="long-url-group" class="input-group">
            <input id="long-url" name="url" v-model="longURL" placeholder="ex: http://pinterest.com" autofocus class="form-control">
            <span class="input-group-btn">
              <button type="submit" class="btn btn-primary" v-class="btn-primary: isValidURL, btn-error: !isValidURL" v-attr="disabled: !isValidURL"><span class="glyphicon glyphicon-link"></span></button>
            </span>
          </div>
        </div>
      </div>
      <div v-class="hide: !shortURL" class="form-group row hide">
        <hr>
        <div class="col-sm-12">
          <div class="input-group">
            <div class="input-group-addon">Shortened:</div>
            <input id="short-url" v-model="shortURL" v-on="
              focus: select,
              mouseup: false | preventDefault
            " readonly class="form-control">
          </div>
        </div>
        <small class="text-muted">You're welcome.</small>
      </div>
      <div v-class="hide: !err" class="form-group hide">
        <hr>
        <p v-show="!isValidURL">Invalid URL. Try something like "<a href="" v-on="click: shorten($event.target.textContent) | preventDefault">etsy.com</a>".</p>
        <p v-show="isValidURL">Couldn't shorten that one. Our team of highly trained baristas will investigate this error.</p>
      </div>
    </form>
  </div>
